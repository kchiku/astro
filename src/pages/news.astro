---
import Layout from '../layouts/Layout.astro';

let res = await fetch(`https://xtra-blog.net/wp-json/wp/v2/posts?_embed`);
let posts = await res.json();
// console.log(posts)
function formatDate(dateString: string): string {
  const date=new Date(dateString);
  const year=date.getFullYear();
  const month= (date.getMonth() + 1).toString().padStart(2, "0");
  const day=date.getDate().toString().padStart(2, "0");
  return `${year}.${month}.${day}`;
}
---

<Layout title="ニュース一覧">
  <section>
    <h1>ニュース一覧</h1>
    {
      posts.map((post: any) => (
        <article>
          <a href={`/news/${post.slug}/`}>
            {/* <div class="eyecatch">
              <img src={post._embedded["wp:featuredmedia"]["0"].media_details.sizes.large.source_url} alt={post.title.rendered} />
            </div> */}
            <div class="date">{formatDate(post.date)}</div>
            <div class="title">{post.title.rendered}</div>
          </a>
        </article>
      ))
    }
  </section>
</Layout>

<style>
  body{
    background-color: #fff;
  }
</style>